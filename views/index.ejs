<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Mini Whatsapp</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='style.css'>
    <script src='main.js'></script>
</head>
<body>
    <h3>All chats!</h3>
    <form method = "GET" action = "/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From : <%= chat.from %></p>
            <p> Received By : <%= chat.to %></p>
            <div class="message">
                <p>Message : <%= chat.message %></p>
                <form method="GET" action="/chats/<%= chat._id %>/edit">
                    <button>Edit</button>
                </form>
                <br>
                 <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                    <button>Delete</button>
                </form>
            </div>
            
            <p>Created At : <%= chat.created_at.toDateString() %></p>
            <p>Created At : <%= chat.created_at.toString().split(' ')[4] %></p>
            <hr>
        </div>
   <% } %> 
</body>
</html>